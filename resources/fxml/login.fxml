<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<GridPane fx:id="loginGrid" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <stylesheets>
        <URL value="@/css/inputCheck.css" />
    </stylesheets>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints maxHeight="5.0" minHeight="5.0" prefHeight="5.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints maxWidth="145.60001220703126" minWidth="10.0" prefWidth="85.0" />
      <ColumnConstraints maxWidth="216.79996337890626" minWidth="10.0" prefWidth="70.0" />
      <ColumnConstraints maxWidth="216.79996337890626" minWidth="10.0" prefWidth="70.0" />
      <ColumnConstraints maxWidth="216.79996337890626" minWidth="10.0" prefWidth="70.0" />
   </columnConstraints>
   <children>
      <Label text="%signin" GridPane.columnSpan="4" GridPane.halignment="CENTER">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <Label text="%username" GridPane.rowIndex="1" />
      <Label text="%password" GridPane.rowIndex="2" />
      <TextField fx:id="userName" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
    <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#openMainWindow" text="%submit" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#closeLoginWindow" text="%cancel" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Separator prefWidth="200.0" GridPane.columnSpan="4" GridPane.rowIndex="4" />
      <Label text="%language" GridPane.rowIndex="5" />
      <ImageView fx:id="flagBiH" fitHeight="25.0" fitWidth="45.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
      <ImageView fx:id="flagUK" fitHeight="25.0" fitWidth="45.0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5">
      </ImageView>
      <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
